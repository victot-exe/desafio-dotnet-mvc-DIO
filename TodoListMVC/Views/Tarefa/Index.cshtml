@model IEnumerable<TodoListMVC.Models.Tarefa>

@{
    ViewData["Title"] = "Lista de tarefas";
}

<h2>Lista de tarefas</h2>

<p>
    <a asp-action="NovaTarefa">Adicionar Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model){
            <tr>
                <td>
                    @Html.DisplayFor(model => i.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => i.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => i.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => i.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => i.Status)
                </td>
                <td>
                    <a asp-action="EditarTarefa" asp-route-id="@i.Id">Editar</a> | 
                    <a asp-action="DetalharTarefa" asp-route-id="@i.Id">Detalhar</a> | 
                    <a asp-action="ExcluirTarefa" asp-route-id="@i.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>